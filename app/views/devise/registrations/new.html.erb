<div id="login_display">
  <div id="login_form">
    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class='field'>
        <%= f.label :アカウント名（15文字以内） %><br>
        <%= f.text_field :accountname, autofocus: true, maxlength: "15", autocomplete: "off" %>
      </div>

      <div class='field'>
        <%= f.label :画像 %>
        <%= f.file_field :avatar %>
      </div>

      <div class='field'>
        <%= f.label :メールアドレス %><br>
        <%= f.email_field :email, autocomplete: "off" %>
      </div>

      <div class='field'>
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <strong>※半角英数<%= @minimum_password_length %>文字以上</strong>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class='field'>
        <%= f.label :パスワード（再確認） %><br>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class='field'>
        <%= f.label :カラー %><br>
        <%= f.select :color, { 選択してください: 'NULL', 赤: 'red', 黄: 'yellow', 橙: 'orange', 空: 'skyblue', 青: 'blue', 緑: 'green', 桃: 'pink', 黒: 'black', 銀: 'silver', 金: 'gold'} %>
      </div>
      <br>

      <div class='actions'>
        <%= f.submit "新規登録", id: "sign_up_btn" %>
      </div>
    <% end %>
  </div>
</div>
